<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:backgroundTint="#909090"
    android:background="#00e1ff"
    android:backgroundTintMode="screen"
    tools:targetApi="lollipop">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtVerzia"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="#bababa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/lblFirst"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/lnlMiddle"
        android:id="@+id/textView2"
        android:layout_below="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/lblLast"
        android:id="@+id/textView3"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:onClick="setDateTimeField"
        android:spinnersShown="true"
        android:clickable="true"
        tools:targetApi="lollipop"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="26dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        style="@android:style/Widget.DeviceDefault.DatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText3"
        android:nestedScrollingEnabled="false"
        android:maxLength="10"
        android:enabled="true"
        android:focusable="true"
        android:textSize="26dp"
        android:textAlignment="center"
        android:backgroundTint="#0df944"
        android:gravity="right"
        android:maxLines="1"
        android:textStyle="bold"
        tools:targetApi="lollipop"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/txtVerzia" />

    <EditText
        style="@android:style/Widget.DeviceDefault.DatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText2"
        android:nestedScrollingEnabled="false"
        android:maxLength="10"
        android:enabled="true"
        android:focusable="true"
        android:textSize="26dp"
        android:textAlignment="center"
        android:backgroundTint="#ffaa00"
        android:gravity="right"
        android:maxLines="1"
        android:textStyle="bold"
        tools:targetApi="lollipop"
        android:layout_above="@+id/editText3"
        android:layout_alignParentEnd="true" />

    <EditText
        style="@android:style/Widget.DeviceDefault.DatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText4"
        android:nestedScrollingEnabled="false"
        android:maxLength="10"
        android:enabled="true"
        android:focusable="true"
        android:textSize="26dp"
        android:textAlignment="center"
        android:backgroundTint="#ffaa00"
        android:gravity="right"
        android:maxLines="1"
        android:textStyle="bold"
        tools:targetApi="lollipop"
        android:layout_below="@+id/editText3"
        android:layout_alignEnd="@+id/txtVerzia" />

</RelativeLayout>
